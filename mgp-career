    <script>
        document.getElementById('apply-game-dev').addEventListener('click', function() {
            let position = '3D Model Artist'; // Adjust dynamically based on the button clicked
            let userName = prompt("Please enter your name:");
            if (!userName) return; // If user cancels prompt, do nothing
            
            let subject = encodeURIComponent(`Application for ${position} at Mastrovert Game Production`);
            let body = encodeURIComponent(`Hi There,\n\nI am ${userName} applying for the position ${position}. I have attached my resume below. (You are requested to attach your resume before sending us the mail.)\n\nThanks and regards,\n${userName}`);
            window.location.href = `mailto:mgpindiaofficial@proton.me?subject=${subject}&body=${body}`;
        });
    </script>
